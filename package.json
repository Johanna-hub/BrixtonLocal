{
  "name": "brixtonlocal",
  "version": "1.0.0",
  "description": "A web app to support local businesses during the COVID-19 crisis using React, Node and Google Sheets API",
  "main": "index.js",
  "scripts": {
    "start": "node ./server/server.js",
    "start:local": "concurrently \"npm run server:watch\" \"npm run client\"",
    "server:watch": "NODE_ENV=dev nodemon ./server/server.js",
    "client": "cd client && npm start",
    "test": "jest ./server/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Johanna-hub/BrixtonLocal.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Johanna-hub/BrixtonLocal/issues"
  },
  "homepage": "https://github.com/Johanna-hub/BrixtonLocal#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^25.2.7",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  }
}
